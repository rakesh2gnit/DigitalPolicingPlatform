<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_variant_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:background="@drawable/bg_gradient"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp45"
                android:contentDescription="@string/icon"
                android:padding="@dimen/dp5"
                app:srcCompat="@drawable/ic_arrow_back" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_guideline_1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp75"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp8"
            app:cardCornerRadius="@dimen/dp8"
            app:cardElevation="@dimen/dp1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp85"
                            android:gravity="center"
                            android:text="John Smith"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_rank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="A1"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/contact_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayoutEmail"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/email"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawableStart="@drawable/ic_email_gray"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayoutMobile"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/mobile"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawableStart="@drawable/ic_phone_gray"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/basic_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llGender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:background="@drawable/bg_round_corner"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerGender"
                                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp40"
                                android:padding="@dimen/dp8" />
                        </LinearLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayoutDob"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/dob"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDob"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:inputType="none"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayoutUserId"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/user_id"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etUserId"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayoutCollarId"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/collar_id"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCollarId"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/org_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutJoiningDate"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/joining_date"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etJoiningDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutSupervisorCollar"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/supervisor_collar"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSupervisorCollar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutDirectorate"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/directorate"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDirectorate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutDivision"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/division"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDivision"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutDepartment"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/department"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDepartment"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutArea"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/area"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etArea"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutStation"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/station"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etStation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutTeam"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/team"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTeam"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutLocation"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp10"
                            android:hint="@string/location"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLocation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dp8"
                                android:textColor="@color/grey"
                                android:textColorHint="@color/colorPrimaryLight"
                                android:textSize="@dimen/sp12" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp45"
                            android:layout_marginStart="@dimen/dp40"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginEnd="@dimen/dp40"
                            android:layout_marginBottom="@dimen/dp10"
                            android:background="@drawable/bg_blue_round"
                            android:elevation="@dimen/dp5"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp18" />
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <hcl.policing.digitalpolicingplatform.utils.ImageViewCircular
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/icon"
            android:elevation="@dimen/dp2"
            android:padding="@dimen/dp4" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

</androidx.constraintlayout.widget.ConstraintLayout>
