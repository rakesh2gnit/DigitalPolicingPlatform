<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/task_details"
            android:textColor="@color/white"
            android:textSize="@dimen/sp22"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp2"
            app:cardElevation="@dimen/dp1"
            app:contentPadding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="clip_vertical"
                        android:text="@string/priority_arrest"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="22 hours left"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp2"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:drawableStart="@drawable/ic_location_green"
                    android:drawablePadding="@dimen/dp8"
                    android:text="22, Church Road, Egham, TW20 1WQ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="clip_vertical"
                        android:text="@string/quick_arrest"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/grey_light_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/intelligence_info"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_intelligence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/highly_dangerous"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/method_utilise"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/handcuffs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/aim"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_aim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/arrest_custody"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/officer_safety"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_safety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:text="@string/be_safe"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_gps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_gps" />

            <Button
                android:id="@+id/btn_navigation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/ic_navigation" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Assign to me"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <hcl.policing.digitalpolicingplatform.customLibraries.MovableFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_play"
        app:backgroundTint="@color/grey_text"
        app:elevation="5dp"
        app:fabSize="normal"
        app:maxImageSize="40dp" />

</RelativeLayout>
