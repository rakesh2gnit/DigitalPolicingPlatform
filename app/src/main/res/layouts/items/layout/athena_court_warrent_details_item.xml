<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCourtWarrant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlCourtWarrantDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivCourtWarrant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvCourtWarrantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivCourtWarrant"
                android:text="@string/court_warrant_desc"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
        </RelativeLayout>

        <include
            android:id="@+id/llCourtWarrantDetails"
            layout="@layout/athena_detail_warrant_desc_expand_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFurtherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlFurtherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivFurtherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvFurtherInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivFurtherInfo"
                android:text="@string/further_information"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />


        </RelativeLayout>

        <include
            android:id="@+id/llFurtherInfoDetails"
            layout="@layout/athena_detail_warrant_further_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEnquiryLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlEnquiryLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivEnquiryLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvEnquiryLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivEnquiryLog"
                android:text="@string/enquiry_log"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEnquiryLogCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llEnquiryLogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>