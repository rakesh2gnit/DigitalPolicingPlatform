<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llInvestigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlInvestigationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivInvestigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvInvestigationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivInvestigation"
                android:text="@string/investigation_details"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />


        </RelativeLayout>

        <include
            android:id="@+id/llInvestigationDetails"
            layout="@layout/linked_athena_detail_investigation_expand_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdditionalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlFurtherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivAdditionalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvAdditionalInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivAdditionalInfo"
                android:text="@string/additional_information"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />


        </RelativeLayout>

        <include
            android:id="@+id/llFurtherInfoDetails"
            layout="@layout/linked_athena_investigation_additional_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPrimaryOffence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlPrimaryOffence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivPrimaryOffence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvPrimaryOffenceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivPrimaryOffence"
                android:text="@string/primary_offence"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
        </RelativeLayout>

        <include
            android:id="@+id/llPrimaryOffenceDetails"
            layout="@layout/linked_athena_primary_offence_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEnquiryLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlEnquiryLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivEnquiryLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvEnquiryLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivEnquiryLog"
                android:text="@string/enquiry_log"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEnquiryLogCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llEnquiryLogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddEnquiryLog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/btn_background"
        android:text="@string/add_enquiry_log"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />

</LinearLayout>