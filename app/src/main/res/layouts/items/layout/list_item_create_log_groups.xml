<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp10"
        android:background="@color/gray_light"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"
        android:text=""/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/dp1"
        app:cardCornerRadius="@dimen/dp1"
        app:cardElevation="@dimen/dp2">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/bg_blue_light_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold"
                    android:text="PB"/>

                <ImageView
                    android:id="@+id/iv_pin"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp5"
                    android:contentDescription="@string/icon"
                    app:srcCompat="@drawable/ic_paper_pin"/>

                <ImageView
                    android:id="@+id/iv_private"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp2"
                    android:contentDescription="@string/icon"
                    app:srcCompat="@drawable/ic_lock_black"/>

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp2"
                    android:contentDescription="@string/icon"
                    app:srcCompat="@drawable/ic_offline"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="clip_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp5">

                    <TextView
                        android:id="@+id/tv_created_by"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp13"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/sp12"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp8"
                android:contentDescription="@string/icon"
                app:srcCompat="@drawable/ic_check_box_unchecked"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
