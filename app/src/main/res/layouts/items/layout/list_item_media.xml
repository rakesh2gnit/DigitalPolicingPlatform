<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MediaCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp4"
    card_view:cardCornerRadius="@dimen/dp8"
    card_view:cardElevation="@dimen/dp2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:scaleType="centerCrop"
            android:src="@drawable/gmp1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_kent"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp15"/>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp14"
                android:layout_height="@dimen/dp14"
                android:layout_marginStart="@dimen/dp8"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_task"/>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="@string/desc_detail"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_gravity="end"
            android:text="15 Feb 2019"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/sp12"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>