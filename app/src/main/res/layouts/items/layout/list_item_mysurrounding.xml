<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Task"
    android:layout_width="@dimen/dp200"
    android:layout_height="@dimen/dp105"
    android:layout_margin="@dimen/dp4"
    card_view:cardCornerRadius="@dimen/dp8"
    card_view:cardElevation="@dimen/dp2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_gray_right_round"
                android:paddingStart="@dimen/dp8"
                android:paddingEnd="@dimen/dp40"
                android:paddingBottom="@dimen/dp1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp2"
                    android:contentDescription="@string/icon"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:text="@string/task"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"/>

            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="10:23pm"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/sp12"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp8"
            android:text="@string/witness"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp2"
            android:text="1.9 Miles"
            android:textColor="@color/green"
            android:textSize="@dimen/sp12"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>