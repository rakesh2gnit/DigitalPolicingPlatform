<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlVehicleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivVehicleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvVehicleDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivVehicleDetails"
                android:text="@string/pnc_vehicle_details"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />


        </RelativeLayout>

        <include
            android:id="@+id/llVehicleDetails"
            layout="@layout/pnc_vehicle_expand_items"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVehicleReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlVehicleReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivVehicleReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvVehicleReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivVehicleReport"
                android:text="@string/vehicle_report"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVehicleReportCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llVehicleReportContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInsuranceReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlInsuranceReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivInsuranceReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvInsuranceReportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivInsuranceReport"
                android:text="@string/insurance_report"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInsuranceReportCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llInsuranceReportContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>