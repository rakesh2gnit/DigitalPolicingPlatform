<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginEnd="@dimen/dp15"
    android:background="@color/black_trans"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSystemNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlSystemNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivSystemNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvSystemNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivSystemNo"
                android:text="@string/poll_system_no"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSystemNoCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSystemNoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIdNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvIdNumberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivIdNumber"
                android:text="@string/poll_id_number"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIdNumberCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llIdNumberContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPassport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp2">

            <ImageView
                android:id="@+id/ivPassport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/images"
                android:foregroundGravity="center_vertical"
                android:outlineSpotShadowColor="@color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvPassportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp5"
                android:layout_toEndOf="@+id/ivPassport"
                android:text="@string/poll_passport"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPassportCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_blue_badge"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llPassportContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>